{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Realm States",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["realm_id", "tier", "realm_seed", "stage_index", "encounter_cursor"],
    "properties": {
      "realm_id": { "type": "string" },
      "tier": { "type": "integer", "minimum": 1, "maximum": 10 },
      "realm_seed": { "type": "string" },
      "stage_index": { "type": "integer", "minimum": 0 },
      "encounter_cursor": { "type": "integer", "minimum": 0 },
      "modifiers": { "type": "object", "additionalProperties": { "type": "number" } }
    }
  }
}
